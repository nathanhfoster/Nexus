<!DOCTYPE html>
<html>
  <head>
    <!-- <title>Nathan Foster Resume</title> -->
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" %>
   
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   <!--  <%= javascript_include_tag 'https://unpkg.com/jspdf@latest/dist/jspdf.min.js' %> -->
    <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js' %>
    <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js' %>


  <body>
    <!-- Nav Bar -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation">
      <div class="navbar-brand pull-left">
        <%= link_to "NF", root_path, {:class => ''} %>
      </div>
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navigation">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="sr-only">Toggle navigation</span>
          </button>

        </div>

        <div class="collapse navbar-collapse" id="navigation">

          <ul class="nav navbar-nav">

            <li class="<%= active_class(root_path) %>">
              <%= link_to "Resume", root_path, {:class => ''} %>

              <li class="<%= active_class(projects_path) %>">
              <%= link_to "Projects", projects_path,{:class => ''} %>

            </li>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
    <a  href="#" class=”back-to-top" style=”display: inline;”><i class="fa fa-arrow-circle-up fa-inverse"></i></a>

    <footer class="text-center hidden-print">
        <p>&copy; <%= Date.today.year %> Nathan Foster.</p>
      </footer>
  </body>
</html>
